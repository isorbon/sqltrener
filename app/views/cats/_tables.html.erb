<style>
  table{
    background: #ffffff;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius:  10px;
    -khtml-border-radius:10px;
  }

</style>
<div class="container">
  <table class="table table-hover">
    <thead>
    <tr>
          <th>
      №
          </th>
      <th>
        Названия
      </th>
    </tr>

    </thead>
    <tbody>
    <%
      @cats=Cat.all
      @cats.each do |cat| %>
        <tr>
          <td>
            <%=
              link_to  "#{cat.id}" ,categorye_path(cat.id),method: :post %>
          </td>
          <td>
            <%= cat.name %>
          </td>
          <td>
            <%= link_to  "Удалить" ,categoryd_path(cat.id),method: :post %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>




