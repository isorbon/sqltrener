<style>
  table{
    background: #ffffff;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius:  10px;
    -khtml-border-radius:10px;
  }
</style>
<div class="page-content inset">
<div class="row">
  <table class="table table-hover">
    <thead>
    <tr>
          <th>
      №
          </th>
      <th>
        Названия
      </th>
      <th>
Действия
      </th>

    </tr>

    </thead>
    <tbody>
    <%
      @cats=Cat.all
      @cats.each do |cat| %>
        <tr>
          <td>
            <abbr title="Редактировать">
              <h5>
                <%=
                  link_to  "#{cat.id}" ,categorye_path(Base64.encode64( Base64.encode64(cat.id.to_s))),method: :post %>
              </h5>
            </abbr>

          </td>
          <td>
            <abbr title="<%= cat.name %>">
              <h5>
                <%= cat.name[0..15] %>
              </h5>
            </abbr>
          </td>
          <td>
            <h5>
              <%= link_to  "Удалить" ,categoryd_path(Base64.encode64( Base64.encode64(cat.id.to_s))),method: :post %>
            </h5>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>




