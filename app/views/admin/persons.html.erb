<%= render 'maket' %>
<style>
  table{
    margin-top: 10%;
    background: #ffffff;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius:  10px;
    -khtml-border-radius:10px;
  }

</style>


<%@users=User.all %>
<div style="margin-left: 10%;margin-right: 10%;" class="page-content inset">

  <div class="row">

  <table class="table table-hover">
    <thead>
    <tr>
      <th>№</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Логин</th>
      <th>Статус</th>
      <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
       <abbr title="Редактировать">
        <h5>
          <%=
            link_to  "#{user.id}" , edit_path(Base64.encode64( Base64.encode64(user.id.to_s))),method: :post %>
        </h5>
       </abbr>
    <td>
      <abbr title="<%= user.fname %>">
        <h5>
          <%= user.fname[0..12] %>
        </h5>
      </abbr>
    </td>
        <td>

          <abbr title="<%= user.lname %>">
            <h5>
              <%= user.lname[0..12] %>
            </h5>
          </abbr>

        </td>
        <td>
          <abbr title="<%= user.login %>">
            <h5>
              <%= user.login[0..12] %>
            </h5>
          </abbr>

        </td>
      <td>
        <% if user.status_user == 1  %>
          <h5>
            Автор
          </h5>
        <%	else  %>
            <h5>
              Пользователь
            </h5>

        <% end %>
      </td>
      <td>
        <h5>
          <%= link_to  "Удалить" ,del_path(Base64.encode64( Base64.encode64(user.id.to_s))),method: :post %>
        </h5>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>

