<%= render 'maket' %>
<%@users=User.all %>
<div class="container">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>№</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Логин</th>
      <th>Статус</th>
      <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%=
         link_to  "#{user.id}" ,edit_path(user.id),method: :post %>
      </td>
    <td>
      <%= user.fname %>
    </td>
        <td>
      <%= user.lname %>
        </td>
        <td>
      <%= user.login %>
        </td>
      <td>
        <% if user.status_user== 1  %>
            Автор
        <%	else  %>
            Пользователь
        <% end %>
      </td>
      <td>
       <%= link_to  "Удалить" ,del_path(user.id),method: :post %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>


